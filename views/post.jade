h2 Welcome to #{title}
	div
		button.btn.btn-default.btn-lg.btn-block(ng-if="!show_posts" ng-click="loadPosts()" title="click to search") Find Posts
			sloth-logo 
		button.btn.btn-default.btn-lg.btn-block(ng-if="show_posts" ng-click="hidePosts()" title="click to hide") Hide Posts
			sloth-logo 

div#posts(ng-if="show_posts")
	ul.list-group(ng-repeat="post in posts")
		li.list-group-item 
			h3 Index: 
				span.content{{$index + 1}} 
		li.list-group-item 
			h3 Title: 
				span.content{{post.title}} 
		li.list-group-item 
			h3 Body: 
				span.content{{post.body}} 
		li.list-group-item 
			button.btn.btn-default.btn-sm(ng-click="loadComments(post.id); show_comments=!show_comments" ng-hide="show_comments") Show Comments
			button.btn.btn-default.btn-sm(ng-show="show_comments" ng-click="hideComments(); show_comments=!show_comments") Hide Comments 
		ul(ng-repeat="comment in comments")
			div(ng-if="commentForPost(post.id,comment.postId)") 
				li.list-group-item.list-group-item-success
					span.content{{$index+1}}) {{comment.body}}
