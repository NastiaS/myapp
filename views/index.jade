extends layout

block content
	h2= title
	h2 Welcome to #{title}
		div
			button.btn.btn-default.btn-lg.btn-block(ng-if="!showPosts" ng-click="loadPosts()" title="click to search") Find Posts
			button.btn.btn-default.btn-lg.btn-block(ng-if="showPosts" ng-click="hidePosts()" title="click to search") Hide Posts

			div#posts(ng-if="showPosts")
				div(ng-repeat="post in posts")
					div#rows Index: {{$index + 1}} Title: {{post.title}} Body: {{post.body}} Comments: 
						div 
							button(ng-if="!showComments" ng-click="loadComments(post.id)") Show Comments
							button(ng-if="showComments" ng-click="hideComments(post.id)") Hide Comments
							td#rows 
								div(ng-repeat="comment in comments")
									div(ng-if="commentForPost(post.id,comment.postId)")
										{{$index+1}}) {{comment.body}}

