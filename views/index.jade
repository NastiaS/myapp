extends layout

block content
	h2= title
	h2 Welcome to #{title}
		div
			button.btn.btn-default.btn-lg.btn-block(ng-if="!showPosts" ng-click="loadPosts()" title="click to search") Find Posts
			button.btn.btn-default.btn-lg.btn-block(ng-if="showPosts" ng-click="hidePosts()" title="click to search") Hide Posts

	div#posts(ng-if="showPosts")
				ul.list-group(ng-repeat="post in posts")
					li.list-group-item 
						h4 Index: 
							span.content{{$index + 1}} 
					li.list-group-item 
						h4 Title: 
							span.content{{post.title}} 
					li.list-group-item 
						h4 Body: 
							span.content{{post.body}} 
					li.list-group-item 
						button.btn.btn-default.btn-sm(ng-if="!showComments" ng-click="loadComments(post.id)") Show Comments
						button.btn.btn-default.btn-sm(ng-if="showComments" ng-click="hideComments(post.id)") Hide Comments 
					ul(ng-repeat="comment in comments")
						div(ng-if="commentForPost(post.id,comment.postId)") 
							li.list-group-item.list-group-item-success
								span.content{{$index+1}}) {{comment.body}}